<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context="com.work.snaildan.activity.MoreActivity">
    <include
        android:id="@+id/re_top"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        layout="@layout/public_top_layout">
    </include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/statistc_middle_bg"
        android:layout_below="@id/re_top">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/more_sortmanager"
            android:src="@drawable/more_sortmanager"
            android:clickable="true" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/more_line1"
            android:layout_below="@id/more_sortmanager"
            android:background="@drawable/line"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/more_backup"
            android:layout_below="@id/more_line1"
            android:src="@drawable/more_backup"
            android:clickable="true" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/more_line2"
            android:layout_below="@id/more_backup"
            android:background="@drawable/line"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/more_recovery"
            android:layout_below="@id/more_line2"
            android:src="@drawable/more_recovery"
            android:clickable="true"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/more_line3"
            android:layout_below="@id/more_recovery"
            android:background="@drawable/line"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/more_about"
            android:layout_below="@id/more_line3"
            android:src="@drawable/more_about"
            android:clickable="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/more_line4"
            android:layout_below="@id/more_recovery"
            android:background="@drawable/line"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/more_backup_xml"
            android:layout_below="@id/more_line4"
            android:src="@drawable/more_backup"
            android:clickable="true"/>

    </RelativeLayout>
</RelativeLayout>
