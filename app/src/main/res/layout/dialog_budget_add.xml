<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_budget_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/sort_add_bg"
                tools:context="com.work.snaildan.activity.BudgetAddDialog">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-08预算："
        android:id="@+id/budget_text"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:textColor="#806111"
        android:textSize="18sp"
        />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="60dp"
        android:textSize="18sp"
        android:maxLines="1"
        android:id="@+id/budget_editText"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/budget_image1"
        android:background="@drawable/sort_flow_item_bg"
        android:layout_below="@id/budget_editText"/>

    <CheckBox
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:scaleX="1.0"
        android:scaleY="1.0"
        android:id="@+id/budget_open5"
        android:layout_alignBottom="@+id/budget_image1"
        android:layout_alignStart="@+id/budget_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一级预警    50%时提醒"
        android:layout_marginLeft="50dp"
        android:textColor="#806111"
        android:layout_marginBottom="12dp"
        android:layout_alignBottom="@+id/budget_image1"
        android:layout_alignStart="@+id/budget_open5"
        android:textSize="18sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/budget_image2"
        android:layout_marginTop="20dp"
        android:background="@drawable/sort_flow_item_bg"
        android:layout_below="@id/budget_image1"/>

    <CheckBox
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:scaleX="1.0"
        android:scaleY="1.0"
        android:id="@+id/budget_open9"
        android:layout_alignBottom="@+id/budget_image2"
        android:layout_alignStart="@+id/budget_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二级预警    90%时提醒"
        android:layout_marginLeft="50dp"
        android:textColor="#806111"
        android:layout_marginBottom="12dp"
        android:layout_alignBottom="@+id/budget_image2"
        android:layout_alignStart="@+id/budget_open9"
        android:textSize="18sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/budget_image3"
        android:layout_marginTop="20dp"
        android:background="@drawable/sort_flow_item_bg"
        android:layout_below="@id/budget_image2"/>

    <CheckBox
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:scaleX="1.0"
        android:scaleY="1.0"
        android:id="@+id/budget_open100"
        android:layout_alignBottom="@+id/budget_image3"
        android:layout_alignStart="@+id/budget_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三级预警    100%时提醒"
        android:layout_marginLeft="50dp"
        android:textColor="#806111"
        android:layout_marginBottom="12dp"
        android:layout_alignBottom="@+id/budget_image3"
        android:layout_alignStart="@+id/budget_open100"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:id="@+id/btn_save_pop"
            android:text="确认"
            android:background="@drawable/part_bg"
            android:layout_marginBottom="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/btn_cancel_pop"
            android:layout_weight="1"
            android:text="取消"
            android:background="@drawable/part_bg"/>
    </LinearLayout>
</RelativeLayout>
